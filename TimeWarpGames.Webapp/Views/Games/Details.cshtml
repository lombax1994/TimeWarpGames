@model TimeWarpGames.Entities.Game

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@{
    ViewBag.Title = "Game Details";
}

<div class="container mt-5">
    <div class="card shadow rounded-4 p-4">
        <div class="row g-4">
            <!-- Left: Game Image -->
            <div class="col-md-4 text-center">
                <img src="~/Content/Images/GamePics/@Model.Image"
                     alt="@Model.Name"
                     class="img-fluid rounded shadow-sm"
                     style="max-height: 300px; width: 100%; object-fit: contain;"
                     onerror="this.onerror=null;this.src='@Url.Content("~/Content/Images/placeholder.png")';" />
            </div>

            <!-- Right: Game Details -->
            <div class="col-md-8 d-flex flex-column justify-content-between">
                <div>
                    <!-- Name -->
                    <h2 class="fw-bold text-light">@Model.Name</h2>

                    <!-- Description -->
                    <p class="text-secondary small mb-4">@Model.Description</p>

                    <!-- Platform + Genre -->
                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <strong>Platform:</strong> @Model.Platform
                        </div>
                        <div class="col-sm-6">
                            <strong>Genre:</strong> @Model.Genre
                        </div>
                    </div>

                    <!-- Developer + Age Rating -->
                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <strong>Developer:</strong> @Model.Developer
                        </div>
                        <div class="col-sm-6">
                            <strong>Leeftijd:</strong> @Model.AgeRating
                        </div>
                    </div>

                    <!-- Boxed + Release Date -->
                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <strong>Boxed:</strong> @(Model.IsBoxed ? "Ja" : "Nee")
                        </div>
                        <div class="col-sm-6">
                            <strong>Release Date:</strong> @Model.ReleaseDate.ToString("yyyy-MM-dd")
                        </div>
                    </div>

                    <!-- Price -->
                    <div class="mb-4">
                        <span class="fs-4 fw-bold text-success">@Model.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</span>
                    </div>

                    <!-- Stock Information -->
                    <div class="mb-4">
                        <strong>Voorraad:</strong> @Model.Stock
                    </div>
                </div>

                <!-- Bottom Right Add to Cart -->
                <!-- Enkel zichtbaar als user is aangemeld-->
                @if (User.Identity.IsAuthenticated)
                {
	                <div class="d-flex justify-content-end">
		                <!-- Formulier om het product toe te voegen aan de winkelwagen -->
		                <form id="addToCart" action="@Url.Action("Add", "ShoppingCart")" method="post">
			                <input type="hidden" name="productId" value="@Model.ProductId" />
			                <button class="btn btn-primary px-4">
				                <i class="bi bi-cart-plus me-1"></i> Add to Cart
			                </button>
		                </form>
	                </div>
                }
            </div>
        </div>
    </div>

    <!-- Navigation Buttons -->
    <!-- Enkel zichtbaar als user is aangemeld-->
    <div class="mt-4">
        @if (User.IsInRole("StoreManager"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }, new { @class = "btn btn-light me-2" })
        }
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-light" })
    </div>

</div>
