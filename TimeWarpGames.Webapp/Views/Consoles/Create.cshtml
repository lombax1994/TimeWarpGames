@model TimeWarpGames.Entities.Console

@{
    ViewBag.Title = "Create";
}

<h2>Nieuwe console toevoegen</h2>
<p>@ViewBag.Feedback</p>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
