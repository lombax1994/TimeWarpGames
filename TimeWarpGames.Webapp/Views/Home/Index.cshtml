@{
    ViewBag.Title = "Home Page";
}

<main>
    <!-- Intro Sectie -->
    <section class="intro-section text-center py-5 bg-dark text-white">
        <div class="container">
            <!-- Logo -->
            <img src="~/Content/Images/logo.png" alt="TimeWarp Games Logo" class="logo img-fluid mb-3" style="max-width: 300px;">

            <!-- Intro Tekst -->
            <h1 class="display-4 mb-3">Welkom bij TimeWarp Games</h1>
            <p class="lead mb-4">Ontdek de beste consoles, games en accessoires van je jeugd. Herbeleef de klassiekers en til je game-ervaring naar een hoger niveau.</p>

            <!-- Call to Action Knop -->
            <a href="/shop" class="btn btn-lg">Shop Nu</a>
        </div>
    </section>

    <!-- Bootstrap Carousel zonder Indicators -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">
        <div class="carousel-inner">
            <!-- Carousel Items -->
            <div class="carousel-item active">
                <img src="~/Content/Images/Carousel/GBA.jpg" class="d-block w-100" alt="Game 1">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/Carousel/n64.png" class="d-block w-100" alt="Game 2">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/Carousel/NES.jpg" class="d-block w-100" alt="Game 3">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/Carousel/PS1.jpg" class="d-block w-100" alt="Game 4">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/Carousel/SNES.jpg" class="d-block w-100" alt="Game 5">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/Carousel/ps2.png" class="d-block w-100" alt="Game 6">
            </div>
        </div>
    </div>

</main>
