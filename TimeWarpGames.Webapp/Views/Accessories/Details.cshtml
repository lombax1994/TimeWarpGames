@model TimeWarpGames.Entities.Accessory

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@{
    ViewBag.Title = "Accessory Details";
}

<div class="container mt-5">
    <div class="card shadow rounded-4 p-4">
        <div class="row g-4 align-items-start">
            <!-- Image -->
            <div class="col-md-4 text-center">
                <img src="~/Content/Images/AccessoryPics/@Model.Image"
                     alt="@Model.Name"
                     class="img-fluid rounded shadow-sm"
                     style="max-height: 300px; width: 100%; object-fit: contain;"
                     onerror="this.onerror=null;this.src='@Url.Content("~/Content/Images/placeholder.png")';" />
            </div>

            <!-- Text Content -->
            <div class="col-md-8 d-flex flex-column justify-content-between">
                <div>
                    <!-- Name and Description -->
                    <h2 class="fw-bold">@Model.Name</h2>
                    <p class="text-secondary small mb-3">@Model.Description</p>

                    <!-- Two Column Labels -->
                    <div class="row">
                        <div class="col-6 mb-2">
                            <div><strong>Brand:</strong> @Model.Brand</div>
                            <div><strong>Type:</strong> @Model.Type</div>
                            <div><strong>Stock:</strong> @Model.Stock</div> <!-- Voorraad toegevoegd -->
                        </div>
                        <div class="col-6 mb-2">
                            <div><strong>Platform:</strong> @Model.Platform</div>
                            <div><strong>State:</strong> @Model.State</div>
                            <div>
                                <strong>Boxed:</strong>
                                @if (Model.IsBoxed)
                                {
                                    <i class="fa-solid fa-check text-success"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-xmark text-danger"></i>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bottom: Price and Add to Cart -->
                <!-- Enkel zichtbaar als user is aangemeld-->
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <span class="fs-4 fw-bold">@Model.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</span>
                        <div class="mb-3">
                            <strong>Voorraad:</strong> @Model.Stock
                        </div>

                        <!-- Formulier voor het toevoegen van de accessory aan de winkelwagen -->
                        <form id="addToCart" asp-controller="ShoppingCart" asp-action="Add" method="post">
                            <input type="hidden" name="productId" value="@Model.ProductId" />
                            <button class="btn btn-outline-primary px-4">
                                <i class="fa-solid fa-cart-plus me-2"></i> Add to Cart
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Navigation Buttons -->
    <!-- Enkel zichtbaar als user is aangemeld-->
    <div class="mt-4">
        @if (User.IsInRole("StoreManager"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }, new { @class = "btn btn-secondary me-2" })
        }
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
